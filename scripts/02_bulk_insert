FROM 'C:\Users\Jessica\Documents\sql-data-analytics-project\datasets\csv-files\bronze.crm_sales_details.csv'
WITH(
	FIRSTROW = 2,
	FIELDTERMINATOR=',',
	TABLOCK
);

SELECT * FROM bronze.crm_sales_details;
